<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtVilleRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/villeRecherche"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toLeftOf="@+id/villeRecherche"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/tvxl" />

    <EditText
        android:id="@+id/villeRecherche"
        android:layout_width="@dimen/etxl"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="170dp"
        android:textSize="@dimen/textfontxl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCherche"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/btnxl" />

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRetour"
        android:layout_marginTop="140dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/btnxl" />
</android.support.constraint.ConstraintLayout>